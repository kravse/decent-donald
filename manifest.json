{
  "manifest_version": 2,
  "name": "Tasteful Trump",
  "version": "1.0.3",
  "description": "An extension that transforms all of Trumpâ€™s tweets to tasteful, tender words of encouragement.",
  "icons": {
    "48": "./images/icon.png",
    "128": "./images/icon128.png"

  },
  "browser_action": {
    "default_icon": "./images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["assets/compliments.js", "assets/tasteful-trump.js"]
    }
  ]
}